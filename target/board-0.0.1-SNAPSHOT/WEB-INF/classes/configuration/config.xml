<?xml version="1.0" encoding="UTF-8"?>
<!--https://mybatis.org/dtd/mybatis-3-config.dtd가 다운로드되지 않으면 <a> 태그로 다운해서 
	로컬로 등록한다. -->
 <!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "file:///Library/schema/mybatis-3-config.dtd">

<!-- Java 클래스의 전체 패키지명을 짧게 줄여서 사용할 수 있도록 설정하는 역할 -->
<configuration>
	<!--별칭 환경을 설정한다. -->
	<typeAliases>
		<!--BoardDTO 클래스에 대한 별칭을 설정한다. -->
		<typeAlias alias="BoardDTO"
			type="jin.spring.board.dto.BoardDTO" />
	</typeAliases>
</configuration>